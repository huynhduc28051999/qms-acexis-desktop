{
  "compilerOptions": {
    "experimentalDecorators": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@configs": ["./src/configs/index"],
      "@components/*": ["./src/components/*"],
      "@configs/*": ["./src/configs/*"],
      "@pages/*": ["./src/pages/*"],
      "@pages": ["./src/pages"],
      "@utils/*": ["./src/utils/*"],
      "@tools": ["./src/tools"],
      "@assets/*": ["./src/assets/*"],
      "@common": ["./src/common"],
      "@utils": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules", "public"
  ],
  "include": [
    "src"
  ]
}